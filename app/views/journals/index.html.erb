<h1>Listing journals</h1>

<table>
  <tr>
    <th>Abbr</th>
    <th>Articles count</th>
    <th>Start year</th>
    <th>End year</th>
    <th>Articles counts</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @journals.each do |journal| %>
  <tr>
    <td><%= journal.abbr %></td>
    <td><%= journal.articles_count %></td>
    <td><%= journal.start_year %></td>
    <td><%= journal.end_year %></td>
    <td><%= journal.articles_counts %></td>
    <td><%= link_to 'Show', journal %></td>
    <td><%= link_to 'Edit', edit_journal_path(journal) %></td>
    <td><%= link_to 'Destroy', journal, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

